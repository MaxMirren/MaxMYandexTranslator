<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/empty_background"
    tools:context=".fragments.tabs.TabFragmentFavorites">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_favorites_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_panel">

        <ImageView
            android:id="@+id/search_icon_favorites"
            android:layout_width="24.5dp"
            android:layout_height="24.5dp"
            app:srcCompat="@drawable/search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:contentDescription="@string/search_icon" />

        <ImageButton
            android:id="@+id/cross_from_favorites"
            android:layout_width="17.5dp"
            android:layout_height="17.5dp"
            android:background="@color/white"
            android:clickable="true"
            android:contentDescription="@string/cross_icon"
            android:scaleType="fitXY"
            android:src="@drawable/bnt_cross_changer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="9dp"
            android:visibility="gone"
            app:srcCompat="@drawable/btn_cross" />

        <EditText
            android:id="@+id/searching_in_favorites"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/cross_from_favorites"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toRightOf="@+id/search_icon_favorites"
            app:layout_constraintVertical_bias="0.0"
            android:hint="@string/favorites_search_hint"
            android:textSize="16sp"
            android:backgroundTint="@color/white"
            android:maxLines="1"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp" />

        <TextView
            android:id="@+id/powered_by_yandex_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/powered_by_yandex"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="italic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searching_in_favorites"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.2" />

        <ImageButton
            android:id="@+id/trash_bin_favorites"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@color/white"
            android:clickable="true"
            android:contentDescription="@string/trash_bin_icon"
            android:scaleType="fitXY"
            android:src="@drawable/btn_trash_bin_changer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.735"
            android:layout_marginStart="9dp"
            app:srcCompat="@drawable/trash_bin" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/favorites_page_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/no_appropriate_elements_were_found"
            android:textSize="17sp"
            android:textColor="@color/inactive"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stackFromBottom="true"
        android:id="@+id/favorites_elements_list_view">
    </ListView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stackFromBottom="true"
        android:id="@+id/searched_favorites_elements_list_view"
        android:visibility="gone">
    </ListView>

</LinearLayout>